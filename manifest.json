{
  "manifest_version": 3,
  "name": "Focus Mode - Website Blocker for Productivity",
  "short_name": "Focus Mode",
  "version": "1.0.13",
  "description": "Block distracting websites instantly. One-click toggle, custom timers, auto-unblock. Stay productive. 100% free.",
  "author": "Arpit Jain <arpitjp@gmail.com>",
  "homepage_url": "https://github.com/arpitjp/focus-mode-chrome-extension",
  "permissions": [
    "declarativeNetRequest",
    "declarativeNetRequestWithHostAccess",
    "declarativeNetRequestFeedback",
    "storage",
    "tabs",
    "webNavigation",
    "scripting",
    "alarms",
    "offscreen",
    "management"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "web_accessible_resources": [
    {
      "resources": [
        "blocked.html",
        "blocked.js",
        "icon128.png",
        "content-blocker.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}

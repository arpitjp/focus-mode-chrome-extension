{
  "manifest_version": 3,
  "name": "Focus",
  "version": "1.0.0",
  "description": "Block distracting websites and stay focused with an easy toggle",
  "author": "Arpit Jain <arpitjp@gmail.com>",
  "homepage_url": "https://github.com/arpitjp/focus-blocker",
  "permissions": [
    "declarativeNetRequest",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}

